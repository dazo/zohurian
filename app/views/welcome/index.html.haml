    / Section: contact
    %section#contact.home-section.text-center
      .heading-contact
        .container
          .row
            .col-lg-8.col-lg-offset-2
              .wow.bounceInDown{"data-wow-delay" => "0.4s"}
                .section-heading
                  %h2 Get in touch
                  %i.fa.fa-2x.fa-angle-down
      .container
        .row
          .col-lg-2.col-lg-offset-5
            %hr.marginbot-50/
        .row
          .col-lg-8
            .boxed-grey
              = form_tag message_path, method: 'post', class: 'contact-form' do
                .row
                  .col-md-6
                    .form-group
                      %label{:for => 'name'}
                        Name
                      = text_field_tag :name, nil, class: 'form-control', placeholder: 'Enter name', required: 'required', type: 'text'
                    .form-group
                      %label{:for => 'email'}
                        Email Address
                      .input-group
                        %span.input-group-addon
                          %span.glyphicon.glyphicon-envelope
                        = text_field_tag :email, nil, class: 'form-control', placeholder: 'Enter email', required: 'required', type: 'email'
                    .form-group
                      %label{:for => 'subject'}
                        Subject
                      = select_tag :subject, options_for_select(['Buiseness', 'Private']), class: 'form-control', name: 'subject', required: 'required' 
                  .col-md-6
                    .form-group
                      %label{:for => 'message'}
                        Message
                      = text_area_tag :message, nil, class: 'form-control', cols: '25', name: 'message', placeholder: 'Message', required: 'required', rows: '9'
                  .col-md-12
                    %button#btnContactUs.btn.btn-skin.pull-right{:type => 'submit'}
                      Send Message
          .col-lg-4
            .widget-contact
